<!--suppress ALL -->
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_backgroundd"
    android:layout_width="match_parent"
    android:layout_height="271dp"
    android:orientation="vertical"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:foreground="@drawable/selector_foreground_color"
        elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp"
        android:background="@color/gray_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:elevation="5dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_text"
                tools:ignore="MissingPrefix">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:scaleType="centerCrop"
         />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="226dp"
                    android:layout_gravity="bottom"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="245dp"
                        android:alpha="0.6"
                        android:background="#8b454545"/>
                    <!--  android:background="#dc454545"-->



                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:maxWidth="250dp"
                        android:text="Title"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="#aa0e0606"
                        tools:ignore="HardcodedText,MissingPrefix"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">


                    <!--        <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="23dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_overfloww"
                                android:paddingLeft="8dp"
                                android:paddingRight="15dp"
                                android:background="@color/transparent"
                                tools:ignore="ContentDescription,UnknownId"
                                android:layout_marginRight="13dp"
                                android:layout_marginEnd="13dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" /> !-->

                    <TextView
                        android:id="@+id/channel_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/browser"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/imageButton"
                        android:layout_marginTop="3dp"
                        android:maxLines="1"
                        android:text="Channel Title"
                        android:textColor="@color/primary_text"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,MissingPrefix,SpUsage,UnknownId" />

                    <ImageView
                        android:id="@+id/browser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock"
                        tools:ignore="ContentDescription,RtlHardcoded"
                        android:layout_marginLeft="-9dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/item_pubDate" />


                    <TextView
                        android:id="@+id/item_pubDate"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="1.6dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:maxWidth="220dp"
                        android:text="Wed, Sep 23rd 2015 15:15:36 - 0700"
                        android:textColor="@color/primary_text"
                        android:textSize="7dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,MissingPrefix,SpUsage" />


                </RelativeLayout>


            </RelativeLayout>

        </FrameLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>